<form action="/dashboard/addcity" method="POST">
    <div class="row">
        <div class="col">
            <label for="inputName" class="form-label">Stadtname</label>
            <input placeholder="Stadtname" type="text" class="form-control mb-2" id="inputName" name="name">
        </div>
        <div class="col">
            <label for="inputLatitude" class="form-label">Breitengrad</label>
            <input placeholder="00.0000" type="number" step="0.0001" class="form-control mb-2" id="inputLatitude" min="-90" max="90" name="latitude">
        </div>
        <div class="col">
            <label for="inputLongitude" class="form-label">Längengrad</label>
            <input placeholder="00.0000" type="number" step="0.0001" class="form-control mb-2" id="inputLongitude" min="-180" max="180" name="longitude">
        </div>
    </div>
    <button type="submit" class="btn btn-primary border p-2 my-2">Station hinzufügen</button>
</form>
